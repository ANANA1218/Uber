{# templates/vehicule/create.html.twig #}
<!DOCTYPE html>
<html>
	<head>
		<title>Ajouter un véhicule</title>
	</head>
	<body>
		<h1>Ajouter un véhicule</h1>
		<form method="post" action="{{ path('vehicule_create') }}">
			<label for="titre">Titre :</label>
			<input type="text" id="titre" name="titre"><br><br>

			<label for="marque">Marque :</label>
			<input type="text" id="marque" name="marque"><br><br>

			<label for="modele">Modèle :</label>
			<input type="text" id="modele" name="modele"><br><br>

			<label for="description">Description :</label><br>
			<textarea id="description" name="description"></textarea><br><br>

			<label for="photo">Photo :</label>
			<input type="text" id="photo" name="photo"><br><br>

			<label for="prix_journalier">Prix journalier :</label>
			<input type="number" id="prix_journalier" name="prix_journalier"><br><br>

			<label for="date_enregistrement">Date d'enregistrement :</label>
			<input type="datetime-local" id="date_enregistrement" name="date_enregistrement"><br><br>

			<input type="submit" value="Ajouter">
		</form>
	</body>
</html>
