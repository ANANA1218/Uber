{# templates/vehicle/create.html.twig #}

<!DOCTYPE html>
<html>
	<head>
		<title>Ajouter un véhicule</title>
	</head>
	<body>

		<h1>Ajouter un véhicule</h1>

		{% if app.flashes('success') is not empty %}
			<div>{{ app.flashes('success')[0] }}</div>
		{% endif %}

		{{ form_start(form) }}
		{{ form_row(form.titre) }}
		{{ form_row(form.marque) }}
		{{ form_row(form.modele) }}
		{{ form_row(form.description) }}
		{{ form_row(form.photo) }}
		{{ form_row(form.prixJournalier) }}
		{{ form_row(form.save) }}
		{{ form_end(form) }}

	</body>
</html>
